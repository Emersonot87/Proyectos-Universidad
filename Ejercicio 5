import math

class Calculadora:
    @staticmethod
    def calcular(x, y):
        suma = 0
        suma = suma + x
        x = x + math.pow(y, 2)
        suma = suma + (x / y)

        print(f"El valor de x es : {x}")
        print(f"El valor de y es : {y}")
        print(f"El valor de la suma es: {suma}")

Calculadora.calcular(20, 40)
